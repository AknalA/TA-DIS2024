    <!-- Scripts -->
    <script src="plugins/jquery/jquery.min.js"></script>
    <script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="dist/js/adminlte.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.0/dist/sweetalert2.min.js"></script>

    <script>
        document.querySelectorAll('.btn-detail').forEach((button) => {
            button.addEventListener('click', () => {
                const nama = button.getAttribute('data-nama');
                const email = button.getAttribute('data-email');
                const notelp = button.getAttribute('data-notelp');
                const gender = button.getAttribute('data-gender');
                const birthdate = button.getAttribute('data-birthdate');
                const address = button.getAttribute('data-address');
                const parentName = button.getAttribute('data-parent-name');
                const parentJob = button.getAttribute('data-parent-job');
                const parentPhone = button.getAttribute('data-parent-phone');
                const parentAddress = button.getAttribute('data-parent-address');
                const schoolName = button.getAttribute('data-school-name');
                const schoolAddress = button.getAttribute('data-school-address');
                const graduationYear = button.getAttribute('data-graduation-year');
                const nisn = button.getAttribute('data-nisn');
                const status = button.getAttribute('data-status');

                // Status handling with icons
                let statusIcon;
                let statusText;

                if (status === 'approved') {
                    statusIcon = '<i class="fas fa-check-circle" style="color: green; font-size: 24px;"></i>';
                    statusText = 'Approved';
                } else if (status === 'rejected') {
                    statusIcon = '<i class="fas fa-times-circle" style="color: red; font-size: 24px;"></i>';
                    statusText = 'Rejected';
                } else if (status === 'pending') {
                    statusIcon = '<i class="fas fa-hourglass-half" style="color: orange; font-size: 24px;"></i>';
                    statusText = 'Pending';
                }

                // Display detail in SweetAlert
                Swal.fire({
                    title: 'Detail Siswa',
                    html: `
                    <div style="text-align: left; font-family: Arial, sans-serif; font-size: 14px;">
                        <h4>Informasi Pribadi</h4>
                        <p><strong>Nama:</strong> ${nama}</p>
                        <p><strong>Email:</strong> ${email}</p>
                        <p><strong>No Telepon:</strong> ${notelp}</p>
                        <p><strong>Jenis Kelamin:</strong> ${gender}</p>
                        <p><strong>Tanggal Lahir:</strong> ${birthdate}</p>
                        <p><strong>Alamat Lengkap:</strong> ${address}</p>
                        <h4>Informasi Orang Tua/Wali</h4>
                        <p><strong>Nama Orang Tua/Wali:</strong> ${parentName}</p>
                        <p><strong>Pekerjaan Orang Tua/Wali:</strong> ${parentJob}</p>
                        <p><strong>No Telepon Orang Tua/Wali:</strong> ${parentPhone}</p>
                        <p><strong>Alamat Orang Tua/Wali:</strong> ${parentAddress}</p>
                        <h4>Informasi Pendidikan Sebelumnya</h4>
                        <p><strong>Nama Sekolah Asal:</strong> ${schoolName}</p>
                        <p><strong>Alamat Sekolah Asal:</strong> ${schoolAddress}</p>
                        <p><strong>Tahun Kelulusan:</strong> ${graduationYear}</p>
                        <p><strong>NISN:</strong> ${nisn}</p>
                        <h4>Status</h4>
                        <p>${statusIcon} ${statusText}</p>
                    </div>
                `,
                    icon: 'info',
                    confirmButtonText: 'Tutup',
                });
            });
        });
        // Handle Approve button
        document.querySelectorAll('.btn-approve').forEach((button) => {
            button.addEventListener('click', () => {
                Swal.fire({
                    title: 'Apakah Anda yakin?',
                    text: "Data siswa akan disetujui.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Ya, setujui!',
                    cancelButtonText: 'Batal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire(
                            'Disetujui!',
                            'Data siswa telah disetujui.',
                            'success'
                        );
                    }
                });
            });
        });

        // Handle Reject button
        document.querySelectorAll('.btn-reject').forEach((button) => {
            button.addEventListener('click', () => {
                Swal.fire({
                    title: 'Apakah Anda yakin?',
                    text: "Data siswa akan ditolak.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Ya, tolak!',
                    cancelButtonText: 'Batal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire(
                            'Ditolak!',
                            'Data siswa telah ditolak.',
                            'error'
                        );
                    }
                });
            });
        });
    </script>
</body>

